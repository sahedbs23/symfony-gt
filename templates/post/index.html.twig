{% extends 'base.html.twig' %}

{% block title %} Lists of Posts {% endblock %}

{% block body %}
<div class="container">
    <h2>List of all posts</h2>
    <table class="table table-stripped">
        <thead>
        <tr>
            <th>ID#</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for message in app.flashes('success') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>
                        <a href="{{ path('post.show', {id:post.id})  }}">
                            {{ post.title }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('post.remove', { id:post.id }) }}">Delete</a>
                    </td>

                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
